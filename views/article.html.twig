{% extends "layout.html.twig" %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
<p>
    <h2>{{ article.title }}</h2>
    <p>{{ article.description }}</p>
	<p>{{ article.categorie }}</p>
	<img src = '{{app.request.basepath}}/img/{{article.image}}'/>
	<p class="label label-primary"><br/> {{article.price}}â‚¬ </p>
    <h3>Comments</h3>
    {% for comment in comments %}
        <strong>{{ comment.author }}</strong> said :  {{ comment.content }}<br>
		Note : {{ comment.note }}<br>
    {% else %}
        No comments yet.
    {% endfor %}
</p>
{% endblock %}